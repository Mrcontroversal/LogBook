d ={}
#Generating a new dictionary
d ["Ezra"]= 22
#Assigning the new name and value to the dictionary
d ["paul"]= 25

d ["sarah"]= 24

print(d["Ezra"])

d ["sarah"] = 26
#assigning sarah with a new value
print(d["sarah"])
print("")

for name, age in d.items():
    print("name:")
    print(name)
    print("age:")
    print(age)
    print("")
#grouping names and values
    
while 1:
    name = input("enter name: ")
    if name == "quit": break
#Initiated Loop the work 'quit' will stop it

